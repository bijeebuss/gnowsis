# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tldr?schema=public"

# JWT Authentication
JWT_SECRET="your-secret-key-here-change-in-production"

# Encryption for IMAP Passwords (generate with: openssl rand -hex 32)
ENCRYPTION_SECRET="your-64-character-hex-string-here"

# Temporal Workflow Server
TEMPORAL_ADDRESS="localhost:7233"

# Gotenburg PDF Conversion Server
GOTENBURG_URL="http://localhost:3000"

# OpenAI API for LLM-based OCR
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_API_ENDPOINT="https://api.openai.com/v1"
OPENAI_MODEL="gpt-4o-mini"

# Server Configuration
# For local dev (npm start): API runs on API_PORT (default 3001), Vite on 3000
# For Docker: PORT is set in docker-compose.yml (default 3000)
API_PORT=3001
NODE_ENV="development"
